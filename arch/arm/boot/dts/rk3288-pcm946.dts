/dts-v1/;

#include "rk3288-phycore-som.dtsi"

/ {
	model = "Phytec RK3288 PCM-946";
	compatible = "phytec,rk3288-pcm-946", "phytec,rk3288-phycore-som", "rockchip,rk3288";


	regulators {
		compatible = "simple-bus";

		vcc_host0_5v: usb-host0-regulator {
			compatible = "regulator-fixed";
		};

		vcc_host1_5v: usb-host1-regulator {
			compatible = "regulator-fixed";
		};

		vcc_otg_5v: usb-otg-regulator {
			compatible = "regulator-fixed";
		};
	};
};

/* Display & Video */
&hdmi {
	status = "okay";
};

/* Ethernet */
&gmac {
	status = "okay";
};

/* I2C Busses */
&pinctrl {
	rv4162 {
		i2c_rtc_int: i2c-rtc-int {
			rockchip,pins = <5 11 RK_FUNC_GPIO &pcfg_pull_up>;
		};
	};
};

&i2c1 {
	clock-frequency = <400000>;
	status = "okay";

	i2c_rtc: rtc@68 {
		compatible = "rv4162";
		reg = <0x68>;
	};
};

&i2c5 {
	status = "okay";
};

/* Misc */
&pinctrl {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c_rtc_int>;

	rv4162 {
		i2c_rtc_int: i2c-rtc-int {
			rockchip,pins = <5 11 RK_FUNC_GPIO &pcfg_pull_up>;
		};
	};
};

/* MMC */
&pinctrl {
	pcfg_pull_up_drv_12ma: pcfg-pull-up-drv-12ma {
		bias-pull-up;
		drive-strength = <12>;
	};

	sdmmc {
		/*
		* Default drive strength isn't enough to achieve even
		* high-speed mode on pcm-946 board so bump up to 12ma.
		*/
		sdmmc_bus4: sdmmc-bus4 {
			rockchip,pins = <6 16 RK_FUNC_1 &pcfg_pull_up_drv_12ma>,
					<6 17 RK_FUNC_1 &pcfg_pull_up_drv_12ma>,
					<6 18 RK_FUNC_1 &pcfg_pull_up_drv_12ma>,
					<6 19 RK_FUNC_1 &pcfg_pull_up_drv_12ma>;
		};

		sdmmc_clk: sdmmc-clk {
			rockchip,pins = <6 20 RK_FUNC_1 &pcfg_pull_none_12ma>;
		};

		sdmmc_cmd: sdmmc-cmd {
			rockchip,pins = <6 21 RK_FUNC_1 &pcfg_pull_up_drv_12ma>;
		};

		sdmmc_pwr: sdmmc-pwr {
			rockchip,pins = <7 11 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};
};

&sdmmc {
	bus-width = <4>;
	cap-mmc-highspeed;
	cap-sd-highspeed;
	card-detect-delay = <200>;
	disable-wp;
	num-slots = <1>;
	pinctrl-names = "default";
	pinctrl-0 = <&sdmmc_clk &sdmmc_cmd &sdmmc_cd &sdmmc_bus4>;
	vmmc-supply = <&vcc33_sys>;
	vqmmc-supply = <&vcc33_sys>;
	status = "okay";
};

/* Power */
&vcc_host0_5v {
	enable-active-high;
	gpio = <&gpio8 0 GPIO_ACTIVE_HIGH>;
	pinctrl-names = "default";
	pinctrl-0 = <&host0_vbus_drv>;
	regulator-name = "vcc_host0_5v";
	regulator-min-microvolt = <5000000>;
	regulator-max-microvolt = <5000000>;
	regulator-always-on;
	vin-supply = <&vcc_sys>;

};

&vcc_host1_5v {
	enable-active-high;
	gpio = <&gpio0 14 GPIO_ACTIVE_HIGH>;
	pinctrl-names = "default";
	pinctrl-0 = <&host1_vbus_drv>;
	regulator-name = "vcc_host1_5v";
	regulator-min-microvolt = <5000000>;
	regulator-max-microvolt = <5000000>;
	regulator-always-on;
	vin-supply = <&vcc_sys>;
};

&vcc_otg_5v {
	enable-active-high;
	gpio = <&gpio0 12 GPIO_ACTIVE_HIGH>;
	pinctrl-names = "default";
	pinctrl-0 = <&otg_vbus_drv>;
	regulator-name = "vcc_otg_5v";
	regulator-min-microvolt = <5000000>;
	regulator-max-microvolt = <5000000>;
	regulator-always-on;
	vin-supply = <&vcc_sys>;
};

/* UART */
&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_xfer &uart0_cts &uart0_rts>;
	status = "okay";
};

&uart1 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&uart3 {
	status = "okay";
};


/* USB */
&pinctrl {
	usb_host {
		host0_vbus_drv: host0-vbus-drv {
			rockchip,pins = <8 0 RK_FUNC_GPIO &pcfg_pull_none>;
		};

		host1_vbus_drv: host1-vbus-drv {
			rockchip,pins = <0 14 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	usb_otg {
		otg_vbus_drv: otg-vbus-drv {
			rockchip,pins = <0 12 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};
};

&usbphy {
	status = "okay";
};

&usb_host0_ehci {
	status = "okay";
};

&usb_host1 {
	status = "okay";
};

&usb_otg {
	status = "okay";
};
